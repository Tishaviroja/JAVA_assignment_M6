package com.oops;

import java.util.Scanner;

public class Fibonaci 
{
	public static void main(String[] args)
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter No :");
		int num=sc.nextInt();
		int a=0;
		int b=1;
		for(int i=0; i<=num; i++)
		{
			int sum=a+b;
			a=b;
			b=sum;
		}
		System.out.println("Fibonacci series....... "+(sum));
	}

}
